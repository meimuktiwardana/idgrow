              },
              "url": {
                "raw": "{{base_url}}/login",
                "host": ["{{base_url}}"],
                "path": ["login"]
              }
            },
            "event": [
              {
                "listen": "test",
                "script": {
                  "exec": [
                    "if (pm.response.code === 200) {",
                    "    var jsonData = pm.response.json();",
                    "    pm.environment.set('auth_token', jsonData.data.token);",
                    "    pm.collectionVariables.set('auth_token', jsonData.data.token);",
                    "}"
                  ]
                }
              }
            ]
